<div class="center" id="new-saving-form">
	<h5>Create a New Saving</h5>
	<%= form_for(@saving, remote: true, controller: 'savings') do |f| %>
		<p>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</p>
		
		<p>
			<%= f.label :percentage %>
			<%= f.text_field :percentage %>
		</p>

		<p>
			<%= f.label :description %>
			<%= f.text_area :description %>
		</p>

		<%= f.submit "Create Debit" %>
	<% end %>
</div>