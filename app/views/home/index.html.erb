<div class="row">
	<div class="large-6 medium-6 small-12 columns">
		<h3>Monthly Balance</h3>
		<p>Current average monthly savings: <%= number_to_currency(@monthly_balance) %></p>
		<p>Current average monthly savings (database): <span id="updated-monthly"><%= number_to_currency(@total.total) %></span></p>
		<p class="hidden monthly-balance"><%= @monthly_balance %></p>
	</div>
	<div class="large-6 medium-6 small-12 columns">
		<h3>Monthly Savings</h3>
		<p><%= link_to "+ Add Saving", { controller: "savings", action: "new" }, id: "new-saving", remote: true %></p>
		<table id="savings">
		  <tr>
		    <th>Name</th>
		    <th>Percentage</th>
		    <th>Amount</th>
		    <th>Delete</th>
		  </tr>
			<% @savings.each do |saving| %>
				<% @saving_id = "delete-" + saving.id.to_s %>
			  <tr id="<%= @saving_id %>">
			    <td><%= saving.name %></td>
			    <td><%= number_to_percentage(saving.percentage, precision: 0) %><span class="hidden percentage"><%= saving.percentage %></span></td>
			    <td class="calculated-amount"></td>
			    <td><%= link_to "Delete", saving_path(saving.id), method: :delete, remote: true %></td>
			  </tr>
			<% end %>
		</table>
	</div>
</div>

